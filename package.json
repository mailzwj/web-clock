{
    "version": "1.0.2",
    "license": "MIT",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "start": "tsdx watch --name WebClock --format cjs,esm,umd",
        "build": "tsdx build --name WebClock --format cjs,esm,umd",
        "test": "tsdx test",
        "lint": "tsdx lint",
        "prepare": "tsdx build --name WebClock --format cjs,esm,umd",
        "size": "size-limit",
        "analyze": "size-limit --why"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsdx lint"
        }
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "name": "@mailzwj/web-clock",
    "author": "mailzwj",
    "module": "dist/web-clock.esm.js",
    "size-limit": [
        {
            "path": "dist/web-clock.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/web-clock.esm.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@size-limit/preset-small-lib": "^8.2.4",
        "husky": "^8.0.3",
        "size-limit": "^8.2.4",
        "tsdx": "^0.14.1",
        "tslib": "^2.5.2",
        "typescript": "^3.9.10"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    }
}